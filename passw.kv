<MyLayout>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        TextInput:
            id: passw_input
            font_size: 20
            hint_text: "Sem napište slovo pro vygenerování hesla"

        Button:
            id: generate
            font_size: 20
            text: "Generuj"
            on_press: root.GeneratePassw()

        TextInput:
            id: passw_output
            font_size: 20

        Button:
            id: save
            font_size: 20
            text: "Ulož"
            on_press: root.SavePassw()